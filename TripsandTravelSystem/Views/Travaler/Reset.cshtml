@model TripsandTravelSystem.Models.TravalerVM



<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="~/assets/images/favicon.ico" type="image/x-icon">
    <!-- Google font-->
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,500" rel="stylesheet">
    <!-- Required Fremwork -->
    <link rel="stylesheet" type="text/css" href="~/assets/css/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="~/assets/css/style.css">

</head>
<body themebg-pattern="theme1">
    <!-- Pre-loader start -->
    <!-- Pre-loader end -->

    <section class="login-block">
        <!-- Container-fluid starts -->
        <div class="container">
            <div class="row">
                <div class="col-sm-12">
                    <!-- Authentication card start -->

                    <form class="md-float-material form-material" action="/Travaler/Reset" method="post">

                        <input type="hidden" value="@Model.TravalerId" name="TravalerId" />
                        <input type="hidden" value="@Model.UserName" name="UserName" />
                        <input type="hidden" value="@Model.Photo" name="Photo" />
                        <input type="hidden" value="@Model.Email" name="Email" />

                        <div class="auth-box card">
                            <div class="card-block">
                                <div class="row m-b-20">
                                    <div class="col-md-12">
                                        <h3 class="text-center">ResetPassword</h3>
                                    </div>
                                </div>
                                <div class="form-group form-primary">
                                    @Html.PasswordFor(a => a.Password, new { @class = "form-control" })
                                    <span class="form-bar"></span>
                                    <label class="float-label">Enter New Password</label>
                                    @Html.ValidationMessageFor(a => a.Password, null, new { @class = "text-danger" })
                                </div>
                                <div class="form-group form-primary">
                                    @Html.PasswordFor(a => a.ConfirmPassword, new { @class = "form-control" })
                                    <span class="form-bar"></span>
                                    <label class="float-label">Confirm Password</label>
                                    @Html.ValidationMessageFor(a => a.ConfirmPassword, null, new { @class = "text-danger" })
                                </div>
                                <input type="submit" value="Reset" class="btn btn-primary" />
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
    <script src="~/Scripts/jquery-3.5.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>

